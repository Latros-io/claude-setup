{
  "indent": "2spaces",
  "max_line_length": 100,
  "naming_convention": "camelCase",
  "quote_style": "single",
  "trailing_commas": true,
  "semicolons": true,
  "brace_style": "1tbs",
  "space_before_function_paren": false,
  "arrow_parens": "as-needed",
  "enforce_formatting": "advisory",
  "auto_fix": false,
  "respect_existing_style": true,
  "language_overrides": {
    "python": {
      "indent": "4spaces",
      "max_line_length": 79
    },
    "go": {
      "indent": "tabs",
      "use_gofmt": true
    }
  }
}
